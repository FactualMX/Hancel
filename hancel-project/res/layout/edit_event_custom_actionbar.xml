<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:divider="?attr/dividerVertical"
android:dividerPadding="12dip"
android:showDividers="middle">

<!-- id must match corresponding menu item id -->
<LinearLayout
    android:id="@+id/action_cancel"
    style="@style/EditEventCustomActionButton">

<ImageView
    android:src="@drawable/ic_dialog_close_normal_holo"
    style="@style/EditEventCustomActionButtonImage" />
    <TextView
        android:text="@android:string/cancel"
        style="@style/EditEventCustomActionButtonText" />

</LinearLayout>

<!-- id must match corresponding menu item id -->
<LinearLayout
    android:id="@+id/action_done"
    style="@style/EditEventCustomActionButton">

    <ImageView
        android:src="@drawable/ic_cab_done_holo_dark"
        style="@style/EditEventCustomActionButtonImage" />
    <TextView
        android:text="@android:string/ok"
        style="@style/EditEventCustomActionButtonText" />

    </LinearLayout>
</LinearLayout>